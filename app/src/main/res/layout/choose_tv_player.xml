<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:background="@drawable/phone_choose_dialog">

    <TextView
        android:id="@+id/phone_settings_activity_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:padding="8dp"
        android:text="Player"
        android:layout_marginTop="12dp"
        android:textColor="@color/text_color"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/phone_settings_activity_player"
        android:layout_margin="12dp"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/exo_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="Default Player"
            android:textColor="@color/text_color"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/vlc_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:text="VLC Player"
            android:textColor="@color/text_color"
            android:textSize="30sp" />
    </LinearLayout>
</RelativeLayout>